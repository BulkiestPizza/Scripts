#! /bin/bash

mpdRunning=$(pgrep -x mpd) 
ncmpcpp=$(pgrep -x ncmpcpp)
mpc=$(mpc | grep playing) 


if [ $1 == playPause ]
then
    if [ -z "$mpc" ]
    then 
        mpc play 
    else
        mpc pause
    fi
    elif [ $1 == startMusic ]
    then
        if [ -z "$mpdRunning" ]  
        then
            mpd
            if [ -z "$ncmpcpp" ]
            then 
                alacritty -e ncmpcpp
            fi
        else
            killall mpd
            if [ -n "$ncmpcpp" ]
            then 
            killall alacritty
            fi
        fi
fi
  
